{
  "manifest_version": 2,
  "name": "medium infinity reader",
  "description": "Redefined 'referer' in http header to read medium article.",
  "version": "1.0.0",
  "icons": {
    "16": "icon_on.png",
    "48": "icon_on.png",
    "128": "icon_on.png"
  },
  "browser_action": {
    "default_icon": "icon_on.png"
    // "default_popup": "popup.html"
  },
  "permissions": [
    "<all_urls>",
    "webRequest",
    "webRequestBlocking"
  ],
  "background": {
    "matches": [
        "https://medium.com/*"
    ],
    "scripts": ["bgp.js"],
    "persistent": true
  }
}